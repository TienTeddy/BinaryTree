<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/index.css" rel="stylesheet" />

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="background-color:#dcdcdc">
    <img src="~/images/icon-success-1.gif" id="image_success" style="position:fixed;width:100%;height:100%;z-index:1" />
    <div class="container" style="margin-top:1%;">
        <h2>BINARY-TREE</h2>
        <h4 id="clock"></h4>
        <button class="btn btn-info"><a href="/Home/Tree">Cây Nhị Phân - Cây AVL</a></button>
        <button class="btn btn-success"><a href="~/lesion1/index.html">Các Thuật Toán Sắp Xếp</a></button>
        @RenderBody()
        @RenderPage("~/Views/Home/About.cshtml")

        <!--Spinner-->
        <div class="center-parent" id="spinner-action">
            <div class="center-me">
                <div class="loader"></div>
            </div>
        </div>

        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - TienLe10998@gmail.com</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/xuLy.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
